Algoritmo descuentos
	
	//definiciones
	Definir ninos,ninas,suma como entero;
	Definir por_ninos,por_ninas Como Real;
	ninos=78;
	ninas=43;
	
	//Cálculos
	suma=ninos+ninas;
	por_ninos=(ninos/suma)*100;
	por_ninas=(ninas/suma)*100;

	//Impresiones
	Imprimir "El porcentaje de niños es de: ",por_ninos,"%";
	Imprimir "El porcentaje de niñas es de: ",por_ninas,"%";

FinAlgoritmo
